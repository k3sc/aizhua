<body>
	<div class="wrap">
		<ul class="nav nav-tabs">
			<li class="active"><a >话题列表</a></li>
			<li><a href="{:U('Topic/add')}">话题添加</a></li>
		</ul>
		<form method="post" class="js-ajax-form" action="{:U('Topic/listorders')}">
			<div class="table-actions">
				<button class="btn btn-primary btn-small js-ajax-submit" type="submit">{:L('SORT')}</button>
			</div>
		
			<table class="table table-hover table-bordered">
				<thead>
					<tr>
						<th>排序</th>
						<th align="center">ID</th>
						<th>话题</th>
					
						

						<th align="center">{:L('ACTIONS')}</th>
					</tr>
				</thead>
				<tbody>
					<php>$type=array("0"=>"普通礼物","1"=>"可连送礼物");</php>
