						<td><input name="listorders[{$vo['id']}]" type="text" size="3" value="{$vo['orderlist']}" class="input input-order"></td>
						<td align="center">{$vo.id}</td>
						<td>{$vo['name']}</td>

					

						<td align="center">	
							<a href="{:U('Topic/edit',array('id'=>$vo['id']))}" >编辑</a>

						</td>
					</tr>
					</foreach>
				</tbody>
			</table>
			<div class="pagination">{$page}</div>

