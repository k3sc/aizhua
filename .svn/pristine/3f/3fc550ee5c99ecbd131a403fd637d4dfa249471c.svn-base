<admintpl file="header" />
</head>
<body>
<div class="wrap">
    <ul class="nav nav-tabs">
        <li><a href="{:U('Device/device_list')}">设备列表</a></li>
        <li class="active"><a href="javascript:;">设备故障记录</a></li>
    </ul>
    <form method="post" class="js-ajax-form" >
        <table class="table table-hover table-bordered">
            <thead>
            <tr>
                <th>ID</th>
                <th>设备号</th>
                <th>房间名</th>
                <th>房间号</th>
                <th>故障内容</th>
                <th>时间</th>
                <th align="center">{:L('ACTIONS')}</th>
            </tr>
            </thead>
            <tbody>
            <foreach name="list" item="vo">
                <tr>
                    <td>{$vo['id']}</td>
                    <td>{$vo['device_no']}</td>
                    <td>{$vo['room_name']}</td>
                    <td>{$vo['room_no']}</td>
                    <td>{$vo['content']}</td>
                    <td>{$vo.ctime|date="Y-m-d H:i:s",###}</td>
                    <td align="center">
                        <a href="{:U('Device/fault_del',array('id'=>$vo['id']))}" class="js-ajax-dialog-btn" data-msg="您确定要删除吗？">删除</a>
                    </td>
                </tr>
            </foreach>
            </tbody>
        </table>
        <div class="pagination">{$page}</div>

    </form>
</div>
<script src="__PUBLIC__/js/common.js"></script>
</body>
</html>